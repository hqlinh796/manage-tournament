<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../general/head.ejs') %>
    <link href="../../css/manager/manager-add.css" rel="stylesheet">
  </head>

  <body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
      <%-include('../general/nav.ejs') %>

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
          <%-include('../general/topbar.ejs') %>

          <!-- Begin Page Content -->
          <div class="container-fluid">
            <div class="row">
              <main role="main" class="col-md-12 col-lg-12 px-4">
                <div class="col-12">
                  <h3 class="text-center">Thêm quản lý đội bóng</h3>
                  <form
                    method="POST"
                    style="width: 100%;"
                    action="/manager/add"
                  >
                  <% if (manager) { %>
                    <div class="row tab-content">
                      <div class="flex-row" id="show-error-success"></div>
                      <!-- left column -->
                      <div class="col-md-4 col-sm-6 col-xs-12 personal-avatar">
                        <div class="avatar-container text-center">
                          <div class="avatar-position">
                            <input
                              id="UploadAvatar"
                              class="hidden"
                              accept="image/*"
                              name="avatar"
                              id="avatar"
                              type="file"
                            />
                            <label for="UploadAvatar">
                              <img
                                class="img-circle img-thumbnail"
                                id="avatar"
                                width="150"
                                height="150"
                                src="https://png.pngtree.com/png-vector/20190223/ourmid/pngtree-vector-avatar-icon-png-image_695765.jpg"
                                tabindex="0"
                              />
                            </label>
                          </div>
                        </div>
                        <!-- <h2 class="panel-title text-center changeEmail pointer" data-toggle="modal" data-target="#changeEmail" tabindex="0">stepupstudyenglish@gmail.com</h2> -->
                      </div>
                      <!-- edit form column -->
                      <div class="col-md-7 col-sm-6 col-xs-12 personal-info">
                        <div class="form-group display-align row">
                          <label
                            class="col-lg-2 col-md-3 col-sm-4 control-label"
                            >Họ Tên</label
                          >
                          <div class="col-lg-10 col-md-9 col-sm-8">
                            <input
                              class="form-control"
                              id="fullName"
                              name="fullName"
                              type="text"
                              value="<%= manager.fullName%>"
                            />
                          </div>
                        </div>
                        <div class="form-group display-align row">
                          <label
                            class="col-lg-2 col-md-3 col-sm-4 control-label"
                            >Lương</label
                          >
                          <div class="col-lg-10 col-md-9 col-sm-8">
                            <input
                              class="form-control"
                              id="salary"
                              name="salary"
                              type="number"
                              value="<%= manager.salary%>"
                            />
                          </div>
                        </div>
                        <div class="form-group display-align row">
                          <label
                            class="col-lg-2 col-md-3 col-sm-4 control-label"
                            >Ngày sinh</label
                          >
                          <div class="col-lg-10 col-md-9 col-sm-8">
                            <input
                              class="width200 form-control hasDatepicker"
                              id="birthday"
                              placeholder="ngày/tháng/năm"
                              name="birthday"
                              type="date"
                              value="<%= manager.birthday%>"
                            />
                          </div>
                        </div>
                        <div class="form-group display-align row">
                            <label
                              class="col-lg-2 col-md-3 col-sm-4 control-label"
                              >Quốc tịch</label
                            >
                            <div class="col-lg-10 col-md-9 col-sm-8">
                              <input
                                class="width200 form-control"
                                id="nationality"
                                name="nationality"
                                type="text"
                                value="<%= manager.nationality%>">
                            </div>
                          </div>
                        <div class="form-group display-align row">
                          <label
                            class="col-lg-2 col-md-3 col-sm-4 control-label"
                            >Tài khoản</label
                          >
                          <div class="col-lg-10 col-md-9 col-sm-8">
                            <div class="input-group mb-3">
                              <input
                                type="text"
                                class="form-control required"
                                aria-describedby="basic-addon2"
                                id="account"
                                value="<%=account.username %>"
                              />
                              <input
                                style="display: none;"
                                type="text"
                                class="form-control required"
                                aria-describedby="basic-addon2"
                                id="accountId"
                                name="accountId"
                                value="<%=account.id %>"
                              />
                              <div class="input-group-append">
                                <button
                                  type="button"
                                  class="btn btn-info btn-sm"
                                  data-toggle="modal"
                                  data-target="#openAccountList"
                                >
                                  Chọn
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="form-group display-align text-center">
                          <label
                            class="col-lg-2 col-md-3 col-sm-4 control-label"
                          ></label>
                          <div class="col-lg-10 col-md-9 col-sm-8">
                            <input
                              class="btn btn-primary save"
                              value="Lưu"
                              type="submit"
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <% } else { %>
                        <div class="row tab-content">
                            <div class="flex-row" id="show-error-success"></div>
                            <!-- left column -->
                            <div class="col-md-4 col-sm-6 col-xs-12 personal-avatar">
                              <div class="avatar-container text-center">
                                <div class="avatar-position">
                                  <input
                                    id="UploadAvatar"
                                    class="hidden"
                                    accept="image/*"
                                    name="avatar"
                                    id="avatar"
                                    type="file"
                                  />
                                  <label for="UploadAvatar">
                                    <img
                                      class="img-circle img-thumbnail"
                                      id="avatar"
                                      width="150"
                                      height="150"
                                      src="https://png.pngtree.com/png-vector/20190223/ourmid/pngtree-vector-avatar-icon-png-image_695765.jpg"
                                      tabindex="0"
                                    />
                                  </label>
                                </div>
                              </div>
                              <!-- <h2 class="panel-title text-center changeEmail pointer" data-toggle="modal" data-target="#changeEmail" tabindex="0">stepupstudyenglish@gmail.com</h2> -->
                            </div>
                            <!-- edit form column -->
                            <div class="col-md-7 col-sm-6 col-xs-12 personal-info">
                              <div class="form-group display-align row">
                                <label
                                  class="col-lg-2 col-md-3 col-sm-4 control-label"
                                  >Họ Tên</label
                                >
                                <div class="col-lg-10 col-md-9 col-sm-8">
                                  <input
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    type="text"
                                    value=""
                                  />
                                </div>
                              </div>
                              <div class="form-group display-align row">
                                <label
                                  class="col-lg-2 col-md-3 col-sm-4 control-label"
                                  >Lương</label
                                >
                                <div class="col-lg-10 col-md-9 col-sm-8">
                                  <input
                                    class="form-control"
                                    id="salary"
                                    name="salary"
                                    type="number"
                                    value=""
                                  />
                                </div>
                              </div>
                              <div class="form-group display-align row">
                                <label
                                  class="col-lg-2 col-md-3 col-sm-4 control-label"
                                  >Ngày sinh</label
                                >
                                <div class="col-lg-10 col-md-9 col-sm-8">
                                  <input
                                    class="width200 form-control hasDatepicker"
                                    id="birthday"
                                    placeholder="ngày/tháng/năm"
                                    name="birthday"
                                    type="date"
                                    value=""
                                  />
                                </div>
                              </div>
                              <div class="form-group display-align row">
                                  <label
                                    class="col-lg-2 col-md-3 col-sm-4 control-label"
                                    >Quốc tịch</label
                                  >
                                  <div class="col-lg-10 col-md-9 col-sm-8">
                                    <input
                                      class="width200 form-control"
                                      id="nationality"
                                      name="nationality"
                                      type="text"
                                      value="">
                                  </div>
                                </div>
                              <div class="form-group display-align row">
                                <label
                                  class="col-lg-2 col-md-3 col-sm-4 control-label"
                                  >Tài khoản</label
                                >
                                <div class="col-lg-10 col-md-9 col-sm-8">
                                  <div class="input-group mb-3">
                                    <input
                                      type="text"
                                      class="form-control required"
                                      aria-describedby="basic-addon2"
                                      id="account"
                                    />
                                    <input
                                      style="display: none;"
                                      type="text"
                                      class="form-control required"
                                      aria-describedby="basic-addon2"
                                      id="accountId"
                                      name="accountId"
                                    />
                                    <div class="input-group-append">
                                      <button
                                        type="button"
                                        class="btn btn-info btn-sm"
                                        data-toggle="modal"
                                        data-target="#openAccountList"
                                      >
                                        Chọn
                                      </button>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="form-group display-align text-center">
                                <label
                                  class="col-lg-2 col-md-3 col-sm-4 control-label"
                                ></label>
                                <div class="col-lg-10 col-md-9 col-sm-8">
                                  <input
                                    class="btn btn-primary save"
                                    value="Lưu"
                                    type="submit"
                                  />
                                </div>
                              </div>
                            </div>
                          </div>
                    <%} %>
                  </form>
                </div>
              </main>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal -->
    <%-include('../manager/add-model.ejs')%>
    <!-- End Modal -->

    <%-include('../general/js.ejs') %>
  </body>
</html>
