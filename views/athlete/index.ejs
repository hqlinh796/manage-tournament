<!DOCTYPE html>
<html lang="en">

<head>

    <link rel="stylesheet" type="text/css" href="../../css/athlete.css">
    <%- include('../general/head')%>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%-include('../general/nav')%>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->

                <%-include('../general/topbar')%>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <main role="main" class="col-md-12 col-lg-12 px-4">
                            <div class="col mt-4">

                                <div class="row text-center">
                                    <div class="col text-center">
                                        <img alt=<%=teamData.name%> id="logo" src=<%=teamData.logo%>>
                                        <span class="team-name"><%=teamData.name%></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 d-flex" style="margin-bottom: 30px; margin-top: 20px; justify-content: center;">

                                        <span class="font-weight-bold">Người quản lý: &nbsp</span>
                                        <%if(managerData){%>
                                        <span><%=managerData.fullName%> &nbsp</span>
                                        <%}%>
                                        
                                        <!-- <a href="#model-manager" class="mr-5 " data-toggle="modal" data-target="#model-manager">Thay đổi</a> -->
    
    
                                        <span class="ml-5 font-weight-bold">Huấn luyện viên: &nbsp</span>
                                        <%if(coachData){%>
                                        <span><%=coachData.fullName%> &nbsp</span>
                                        <%}%>
                                        <a href="#model-coach" class="mr-5 " data-toggle="modal" data-target="#model-coach">Thay đổi</a>
    
    
                                    </div>
                                </div>
                                <div class="row d-flex justify-content-between ml-3 mr-3">
                                    <div>
                                        <input id="search" class="form-control" type="text" name="" value="" placeholder="Tìm kiếm">
                                    </div>
                                    <div class="mb-3">
                                        <!-- <a href="/admin/user/upgrade" class="p-2 btn btn-primary btn-sm ml-1" role="button"
                          aria-pressed="true">Upgrade Required</a> -->
                                        <a href="#modal-add-athlete" class="p-2 btn btn-success btn-sm" role="button"
                                            aria-pressed="true" data-toggle="modal">
                                            <i class="fa fa-plus mr-2" aria-hidden="true"></i>Thêm</a>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="main-box no-header clearfix">
                                        <div class="main-box-body clearfix">
                                            <div class="table-responsive">
                                                <!-- table -->
                                                <%-include('./table/table-athlete.ejs', {athletesData})%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </div>
                </div>
                <!--===============================================================================================-->
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->


            <%-include('../general/footer')%>

        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


    <!-- Info Model -->
    <%-include('./modal/modal-add-athlete.ejs')%>
    <%-include('./modal/modal-update-athlete.ejs')%>

    <!-- change modal -->
    <%-include('./modal/modal-coach.ejs', {coachesData, coachData})%>
    <%-include('./modal/modal-manager.ejs', {managerData})%>

    <!-- end Modal -->

    <%-include('../general/js')%>

    <script>
        $(function () {
            //document https://www.daterangepicker.com/
            $('input[name="birthday"]').daterangepicker({
                singleDatePicker: true,

            }, function (start, end, label) {
                var years = moment().diff(start, 'years');
                alert("You are " + years + " years old!");
            });
        });
    </script>
    <script>
        function setAction(action) {
            $('#fm-add-athlete')[0].action = action;
        }

        const path = window.location.pathname;
        $('#update-coach')[0].action= path + "/edit";
        $('#update-manager')[0].action= path + "/edit";
        setAction(path);
    </script>
    <script src="../../js/table/athleteList.js"></script>
    <script src="../../js/select/athlete.select.js"></script>
    <script src="../../js/search/name.js"></script>
    <script src="../../js/sort/sortTable.js"></script>
</body>

</html>