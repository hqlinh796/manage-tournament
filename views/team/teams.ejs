<!DOCTYPE html>
<html lang="en">

<head>

  <%-include('../general/head.ejs') %>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <%-include('../general/nav.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <%-include('../general/topbar.ejs') %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Danh sách đội bóng</h1>

            <!-- Button trigger modal -->
            <button type="button" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" data-toggle="modal"
              data-target="#addTeam">
              Thêm
            </button>

            <!-- Modal -->
            <div class="modal fade" id="addTeam" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <form action="/teams" method="post">
                    <div class="modal-header">
                      <h5 class="modal-title">Thêm đội bóng</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <% if(coachsData){ %>
                      <%- include('./add.ejs', {coachsData, teamData}) %>
                      <% } %>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <div class="row justify-content-md-center">
            <div class="col">
              <table class="table table-hover table-inversepicture" id="team">
                <thead class="thead-inverse">
                  <tr>
                    <th>Tên</th>
                    <th>Huấn luyện viên</th>
                    <th>Quản lý</th>
                    <th>Áo 1</th>
                    <th>Áo 2</th>
                  </tr>
                </thead>
                <tbody>
                  <% teamData.forEach(function(row){ %>
                  <%- include('../table/teamShow', {data: row}); %>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <%-include('../general/js.ejs') %>
  <script src="../js/table/teamJS.js"></script>

</body>

</html>