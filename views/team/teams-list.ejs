        <style>
           .mainWidget {
    position: relative;
    clear: both;
    padding-top: 3rem;
    border-top: 2px solid #efefef;
}

.statsTable table {
    text-align: left;
}
.playerIndex table {
    text-align: left;
}
.table table {
    width: 100%;
    text-align: center;
    font-size: 1rem;
    border-collapse: inherit;
}
table {
    border-collapse: collapse;
    border-spacing: 0;
}

.table thead {
    background-color: #fbfbfb;
}

.statsTable {
    margin-top: 2rem;
}

.table.statsTable th {
    text-align: center;
}
.table {
    clear: both;
}

* {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    box-sizing: border-box;
}
div {
    display: block;
}

.tooltipContainer, .visuallyHidden {
    border: 0;
    clip: rect(0 0 0 0);
    height: 1px;
    margin: -1px;
    overflow: hidden;
    padding: 0;
    position: absolute;
    width: 1px;
}
        </style>
      </head>
      
      <body>
        <div id="wrapper">
          <%-include('../general/nav.ejs') %>
      
      
          <div id="content-wrapper" class="d-flex flex-column">
      
            <div class="container-fluid">
                <div class="row">
                   <main role="main" class="col-md-12 col-lg-12 px-4">
                      <div class="col-12">
                         <section class="mainWidget statsRow ">
                            <header>
                               <h3 class="subHeader">Danh sách đội bóng</h3>
                            </header>
                         </section>
                         <div data-script="pl_stats" data-widget="stats-table" data-stat="wins" data-current-size="20" data-type="team" data-page-size="20" data-page="0" data-comps="1" data-num-entries="49">
