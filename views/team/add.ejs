<!DOCTYPE html>
<html>

<head>
  <%-include('../general/head.ejs') %>
  <link rel="stylesheet" href="../css/danger.css">
  <link rel="stylesheet" href="../css/manage-teams.css">

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
  <div id="wrapper">
    <%-include('../general/nav.ejs') %>


    <div id="content-wrapper" class="d-flex flex-column">

      <div class="container-fluid">
        <div class="row">
          <main role="main" class="col-md-9 ml-sm-auto col-lg-14 px-4">
            <div class="row mt-4">
              <div class="col-md-8">
                <div class="card">
                  <form class="form-horizontal" method="POST">
                    <div class="card-header">Thông tin đội bóng</div>
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Tên</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <span class="input-group-addon mr-2 mt-1"><i class="fa fa-futbol-o"
                                aria-hidden="true"></i></i></span>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Nhập tên"
                              value="Manchester United" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="email" class="cols-sm-2 control-label">Huấn luyện viên</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <span class="input-group-addon mr-2 mt-1"><i class="fa fa-user fa"
                                aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="email" id="email"
                              placeholder="Chọn huấn luyện viên" value="" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="address" class="cols-sm-2 control-label">Quản lý</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <span class="input-group-addon mr-2 mt-1"><i class="fa fa-user fa"
                                aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="address" id="address"
                              placeholder="Chọn quản lý" value="" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="address" class="cols-sm-2 control-label">Đồng phục sân nhà</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <span class="input-group-addon mr-2 mt-1"><i class="fa fa-user-circle"
                                aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="address" id="address"
                              placeholder="Chọn đồng phục sân nhà" value="" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                        <label for="address" class="cols-sm-2 control-label">Đồng phục sân khách</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <span class="input-group-addon mr-2 mt-1"><i class="fa fa-user-circle-o"
                                aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="address" id="address"
                              placeholder="Chọn đồng phục sân khách" value="" />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group ">
                      <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Xác nhận</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </main>
        </div>
      </div>
      <!--===============================================================================================-->
      <!-- /.container-fluid -->

    </div>
  </div>



  <%-include('../general/js.ejs') %>

</body>

</html>