                                     <button style="width:100% text-left" id="coach" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" value="">
                                       Chọn huấn luận viên
                                     </button>
                                 <% }} else { %>
