      <script>
        function setManagerValue(manager) {   
          document.getElementById("manager").innerText = JSON.parse(manager).fullName;
          document.getElementById("managerId").value = JSON.parse(manager).accountId;
        }
        function setAccountValue(coach) {
          document.getElementById("coach").innerText = JSON.parse(coach).fullName;
          document.getElementById("coachId").value = JSON.parse(coach).id;
        }

        function setTeamValue(team) {
            document.getElementById("id").name = "id";
            document.getElementById("id").value = JSON.parse(team).id;
          document.getElementById("logo").src = JSON.parse(team).logo;
          document.getElementById("UploadLogo").value = JSON.parse(team).logo;
          document.getElementById("name").value = JSON.parse(team).name;
          document.getElementById("managerId").value = JSON.parse(team).accountId == null ? '' : JSON.parse(team).accountId;
          document.getElementById("manager").innerText = JSON.parse(team).team_manager == null? '' : JSON.parse(team).team_manager.username;
          document.getElementById("coachId").value = JSON.parse(team).coachId == null? '' : JSON.parse(team).coachId;
          document.getElementById("coach").innerText = JSON.parse(team).team_coach == null? '' : JSON.parse(team).team_coach.fullName;
          document.getElementById("logo-uniform1").src = JSON.parse(team).homeShirt;
          document.getElementById("homeShirt").value = JSON.parse(team).homeShirt == null? '' : JSON.parse(team).homeShirt;
          document.getElementById("logo-uniform2").src = JSON.parse(team).awayShirt;
          document.getElementById("awayShirt").value = JSON.parse(team).awayShirt == null? '' : JSON.parse(team).awayShirt;
        }
        function setNoneTeamValue() {
            document.getElementById("id").name = "";
            document.getElementById("UploadLogo").value = '';
          document.getElementById("logo").src = 'https://www.designevo.com/res/templates/thumb_small/star-soccer-ball-badge.png';
          document.getElementById("name").value = '';
          document.getElementById("managerId").value = '';
          document.getElementById("manager").innerText = 'Chọn quản lý';
          document.getElementById("coachId").value = '';
          document.getElementById("coach").innerText = 'Chọn huấn luận viên';
          document.getElementById("logo-uniform1").src = 'https://cdn4.iconfinder.com/data/icons/clothes-accessories-2/367/clothes-accessory-clothing-garment_03-512.png';
          document.getElementById("homeShirt").value = '';
          document.getElementById("logo-uniform2").src = 'https://cdn4.iconfinder.com/data/icons/clothes-accessories-2/367/clothes-accessory-clothing-garment_03-512.png';
          document.getElementById("awayShirt").value = '';
        }
      </script>