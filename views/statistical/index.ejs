<!DOCTYPE html>
<html lang="en">

<head>

    <%-include('../general/head.ejs')%>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%-include('../general/nav.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <%-include('../general/topbar.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <main role="main" class="col-md-12 col-lg-12 px-4">
                            <div class="col mt-4">
                                <div class="row justify-content-md-center"><h1> Tổng điểm: <span style="color: blue;" id="total-point"><%= result.point%></span></h1></div>
                                <div class="row justify-content-md-center">
                                    <div class="col">
                                        <div class="row">
                                            Tổng số bàn thắng: <span style="color: blue;" id="total-point"><%= result.goals%></span>
                                        </div>
                                        
                                        <div class="row">
                                            Tổng số bàn thủng lưới: <span style="color: blue;" id="total-point"><%= result.fail%></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="row">
                                            Tổng số trận thắng: <span style="color: blue;" id="total-point"><%= result.win%></span>
                                        </div>
                                        
                                        <div class="row">
                                            Tổng số trận thua: <span style="color: blue;" id="total-point"><%= result.lose%></span>
                                        </div>
                                    </div>
                                </div>
                                <h2>Danh sách</h2>
                                <div class="row">
                                    <%- include('./table/table-athlete', {athletesData: result.listAthlete})%>
                                </div>
                            </div>
                        </main>
                    </div>
                </div>
                <!--===============================================================================================-->
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->


            <%-include('../general/footer')%>

        </div>
        <!-- End of Content Wrapper -->



    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>


